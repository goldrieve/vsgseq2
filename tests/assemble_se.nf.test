nextflow_process {

    name "Test Process ASSEMBLE (single-end)"
    script "modules/assemble.nf"
    process "ASSEMBLE"

    test("assemble_se: Should assemble SE reads without failures") {

        when {
            params {
                cores = 1
                trinitymem = 10
            }
            process {
                """
                // tuple val(meta), path(trimmed)
                input[0] = [ [ id: 'late_se', single_end: true ], file("${projectDir}/data/reads/latesingle.fq.gz") ]
                input[1] = params.cores
                input[2] = params.trinitymem
                """
            }
        }

        then {
            assert process.success
            assert snapshot(process.out).match()
        }
    }
}
