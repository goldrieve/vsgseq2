nextflow_process {

    name "Test Process TRIM"
    script "modules/trim.nf"
    process "TRIM"

    test("Should trim SE reads") {

        when {
            params {
                cores = 1
            }
            process {
                """
                input[0] = [ [ meta: 'late_se', single_end: true, prefix: 'late_se' ], file("${projectDir}/data/reads/latesingle.fq.gz") ]
                input[1] = params.cores
                """
            }
        }

        then {
            assert process.success
            assert snapshot(process.out).match()
        }

    }

}
