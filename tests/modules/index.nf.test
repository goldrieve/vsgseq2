nextflow_process {

    name "Test Process INDEX"
    script "modules/index.nf"
    process "INDEX"

    test("Should index fasta file") {

        when {
            params {
                cores = 1
            }
            process {
                """
                input[0] = "$projectDir/tests/data/VSGome.fasta"
                input[1] = params.cores

                """
            }
        }

        then {
            assert process.success
            def outputPath = process.out['0'][0].toString()
            def reflengthsFile = file("${outputPath}/reflengths.bin")
            
            assert reflengthsFile.exists()
            assert snapshot(reflengthsFile).match()
        }

    }

}
